<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="file:../../general-component-schema.xsd">
    <Header></Header>
    <CMD_Component>
        
        <!-- where do the texts come from? eg newspaper, internet, etc -->
        <CMD_Element name="RecordingEnvironment" ValueScheme="string" ConceptLink="http://www.isocat.org/datcat/DC-2696">
            <ValueScheme>
                <enumeration>
                    <item>home/office</item>
                    <item>studio</item>
                    <item>vehicle</item>
                    <item>public place</item>
                    <item>telephone</item>
                </enumeration>
            </ValueScheme>
        </CMD_Element>   
        
        <CMD_Element name="NumberOfSpeakers" ValueScheme="decimal"/>
        
        <!-- nr of speakers per sex/age class/dialect/socio-economic status etc -->
        <CMD_Element name="SpeakerDemographics" ValueScheme="string"/>
        
        <CMD_Element name="AnnotationLevelType" ConceptLink="http://www.isocat.org/datcat/DC-2462">
            <ValueScheme>
                <enumeration>
                    <item>orthography</item>
                    <item>non-speech events</item>
                    <item>morphology</item>
                    <item>syntax</item>
                    <item>semantics</item>
                    <item>phonetic</item>
                    <item>prosody</item>
                    <item>segments</item>
                    <item>speaker turn</item>
                    <item>topic</item>
                    <item>sound quality</item>
                </enumeration>
            </ValueScheme>
        </CMD_Element>
                
        <!-- in hours -->
        <CMD_Element name="DurationOfEffectiveSpeech" ConceptLink="http://www.isocat.org/datcat/DC-2691" ValueScheme="decimal"/>
        <CMD_Element name="DurationOfFullDatabase" ConceptLink="http://www.isocat.org/datcat/DC-2690" ValueScheme="decimal"/>
        <CMD_Element name="Quality" ValueScheme="string" CardinalityMin="0"/>
        <CMD_Element name="RecordingPlatformHardware" ValueScheme="string"/>
        <CMD_Element name="RecordingPlatformSoftware" ValueScheme="string"/>
        
        <CMD_Component name="SpeechTechnicalMetadata" CardinalityMin="0" CardinalityMax="unbounded" >    
            <CMD_Element name="SamplingFrequency" ValueScheme="decimal"/>
            <CMD_Element name="NumberOfChannels" ValueScheme="decimal"/>
            <CMD_Element name="ByteOrder">
                <ValueScheme>
                    <enumeration>
                        <item>big endian</item>
                        <item>little endian</item>
                    </enumeration>
                </ValueScheme>
            </CMD_Element>
            <CMD_Element name="Compression">
                <ValueScheme>
                    <enumeration>
                        <item>none</item>
                        <item>lossless</item>
                        <item>lossy</item>
                    </enumeration>
                </ValueScheme>
            </CMD_Element>
        <CMD_Element name="BitResolution" ValueScheme="decimal"></CMD_Element>
            <!-- create mimetype component -->
            <CMD_Component name="mimetype"/>
        </CMD_Component>
        <CMD_Component filename="component-validation.xml"></CMD_Component>
    </CMD_Component>

</CMD_ComponentSpec>
