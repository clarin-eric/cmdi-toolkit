<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd"
                   isProfile="false">
    <Header>
        <ID>eu.clarin.cmdi.lexicalresourcecontent</ID>
        <Name>LexicalResourceContent</Name>
        <Description>A component for describing the linguistic contents of a lexical resource.</Description>
    </Header>
    
    <CMD_Component name="LexicalResourceContent">
                    
        <!-- Klopt de conceptlink (complex/open) of nieuwe aanmaken? -->
        <CMD_Element name="AnnotationType" ConceptLink="http://www.isocat.org/datcat/DC-2488"
                   CardinalityMax="unbounded">
            <ValueScheme>
                <enumeration>
                    <!-- lemma, word form, combinatorics & frequency zijn eigenlijk geen annotaties...-->
                    <!-- spelling, hyphenation, syllabification etc. -->
                    <item ConceptLink="http://www.isocat.org/datcat/DC-286">lemma</item>
                    <item>word form</item>
                    <item>orthography</item>
                    <item ConceptLink="http://www.isocat.org/rest/DC-2642">phonology</item>
                    <item ConceptLink="http://www.isocat.org/rest/DC-2641">phonetics</item>
                    <!-- part-of-speech, inflection, gender etc. -->
                    <item>morphosyntax</item>
                    <item ConceptLink="	http://www.isocat.org/datcat/DC-2638">morphology</item>
                    <item ConceptLink="	http://www.isocat.org/datcat/DC-2647">syntax</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2645">semantics</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-221">etymology</item>
                    <!-- usage -->
                    <item ConceptLink="	http://www.isocat.org/datcat/DC-2643">pragmatics</item>
                    <item>collocations</item>
                    <!-- frequency of occurrence -->
                    <item ConceptLink="	http://www.isocat.org/datcat/DC-233">frequency</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2599">other</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2591">unknown</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2592">unspecified</item>
                </enumeration>
            </ValueScheme>
        </CMD_Element>
     </CMD_Component>
</CMD_ComponentSpec>