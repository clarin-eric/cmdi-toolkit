<?xml version="1.0" encoding="UTF-8"?>

<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../general-component-schema.xsd">
    
    <Header/>
    
    <CMD_Component name="Actor" CardinalityMin="0" CardinalityMax="unbounded">

        <CMD_Element name="Role" ValueScheme="string"/>
        <CMD_Element name="Name" ValueScheme="string"/>
        <CMD_Element name="FullName" ValueScheme="string"/>
        <CMD_Element name="Code" ValueScheme="string"/>
        <CMD_Element name="FamilySocialRole" ValueScheme="string"/>
        
        <!-- in the imdi schema these elements come after languages -->
        <CMD_Element name="EthnicGroup" ValueScheme="string"/>
        <CMD_Element name="Age">
            <ValueScheme>
                <!-- copied from the imdi schema -->
                <pattern>([0-9]+)?(;[0-9]+)?(.[0-9]+)?(/([0-9]+)?(;[0-9]+)?(.[0-9]+)?)?|Unknown|Unspecified</pattern>
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="BirthDate">
            <ValueScheme>
                <!-- matching dates of the pattern yyyy-mm-dd (ISO 8601); this only matches dates from the years 1000 through 2999 and does allow some invalid dates (e.g. February, the 30th) -->
                <pattern>(1|2)\d{3}-(0[1-9]|1[012])-(0[1-9]|[12][0-9]|3[01])</pattern>
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="Sex">
            <ValueScheme>
                <enumeration>
                    <item>Male</item>
                    <item>Female</item>
                    <item>NAP</item>
                    <item>Unspecified</item>
                    <item>Unknown</item>
                </enumeration>                
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="Education" ValueScheme="string"/>
        <CMD_Element name="Anonymized">
            <ValueScheme>
                <enumeration>
                    <item>true</item>
                    <item>false</item>
                    <item>Unknown</item>
                    <item>Unspecified</item>
                </enumeration>                
            </ValueScheme>
        </CMD_Element>
                

               
        <CMD_Component filename="component-contact.xml" />
        
        <CMD_Component filename="component-keys.xml" />            
            
        <CMD_Component filename="component-description.xml" />      
        
        <CMD_Component filename="component-actor-language.xml" />
        
        
    </CMD_Component>

</CMD_ComponentSpec>
