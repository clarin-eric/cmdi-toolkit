<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd" isProfile="true">
    <Header>
        <ID>eu.clarin.cmdi.collection</ID>
        <Name>Collection</Name>
        <Description>A component for describing sets of resources. Can also recursively point to other collections.</Description>
    </Header>
    
    <CMD_Component name="Collection" CardinalityMin="1" CardinalityMax="1">
        
        <CMD_Element name="Name" ValueScheme="string" CardinalityMin="1" CardinalityMax="1" ConceptLink="http://www.isocat.org/datcat/DC-2544"></CMD_Element>
        <CMD_Element name="Title" ValueScheme="string" ConceptLink="http://www.isocat.org/datcat/DC-2545"></CMD_Element>
        <CMD_Element name="ID" ValueScheme="string" ConceptLink="http://www.isocat.org/datcat/DC-2573"></CMD_Element>
        <CMD_Element name="Version" ValueScheme="string" ConceptLink="http://www.isocat.org/datcat/DC-2547"></CMD_Element>
        
        <!-- vergelijken met DC! -->
        <CMD_Element name="TimeCoverage" ValueScheme="string" ConceptLink="http://www.isocat.org/datcat/DC-2502"></CMD_Element>
        <CMD_Element name="Description" ValueScheme="string" CardinalityMin="1" CardinalityMax="1" ConceptLink="http://www.isocat.org/datcat/DC-2520"/>
        <CMD_Element name="PublicationYear" CardinalityMin="0" CardinalityMax="1"  ConceptLink="http://www.isocat.org/datcat/DC-2538" ValueScheme="gYear"/>
                           
        
        <CMD_Component filename="component-project.xml"></CMD_Component>
        <CMD_Component filename="component-creators.xml"></CMD_Component>
        
        
        <!-- wordt documentationlanguages -->
        <CMD_Component filename="component-documentlanguages.xml"></CMD_Component>
        
        <CMD_Component name="OriginLocation">
            <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin/cmdi-location.xml"/>
        </CMD_Component>
        
        <CMD_Component filename="component-collectiontype.xml"></CMD_Component>
        
        <!-- gaat naar corpus en wordt corpusmodality -->
        <CMD_Component filename="component-collectionmodality.xml"></CMD_Component>
        
        <CMD_Component filename="component-access.xml"></CMD_Component>   
        
        <!-- naar corpus -->
        <CMD_Component filename="component-validation.xml"></CMD_Component>
        
        <CMD_Component name="IsPartOf">
            <CMD_Element name="IsPartOf" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="anyURI"/>
        </CMD_Component>
    
    </CMD_Component>
</CMD_ComponentSpec>