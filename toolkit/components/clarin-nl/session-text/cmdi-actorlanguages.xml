<?xml version="1.0" encoding="UTF-8"?>

<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd" isProfile="false">    
    <Header>
        <Name>Actor Languages</Name>
        <Description>Component which identifies the language(s) used by a speaker and indicates a.o. that language is the mother tongue and/or the primary language of the speaker </Description>
    </Header>
    
    <CMD_Component name="ActorLanguages">
        
        <!-- within the component ActorLanguages the component Description provides the possibility to add extra information about the languages a speaker uses -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-description.xml" CardinalityMin="0" CardinalityMax="1" />
        <!-- the component ActorLanguage identifies a language used by a speaker and indicates whether that language is the mother tongue and/or the primary language of the speaker -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/session-text/cmdi-actorlanguage.xml" CardinalityMin="1" CardinalityMax="unbounded" />

     </CMD_Component>

</CMD_ComponentSpec>
