<?xml version="1.0" encoding="UTF-8"?>

<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../general-component-schema.xsd">
    
    <Header/>
    
    <CMD_Component name="Content_Language" CardinalityMin="0" CardinalityMax="unbounded">
        
        <CMD_Element name="ID" ConceptLink="http://www.isocat.org/datcat/DC-2482">
            <ValueScheme>
                <pattern>(ISO639(-1|-2)?:.*)?|(RFC3066:.*)?|(RFC1766:.*)?|(SIL:.*)?|Unknown|Unspecified</pattern>                
            </ValueScheme>
        </CMD_Element>
        <!-- TODO: add the datcat for language name  -->
        <CMD_Element name="Name" ValueScheme="string" />
        <CMD_Element name="Dominant" ConceptLink="http://www.isocat.org/datcat/DC-2468">
            <ValueScheme>
                <enumeration>
                    <item>Unspecified</item>
                    <item>Unknown</item>
                    <item>true</item>
                    <item>false</item>
                </enumeration>                
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="SourceLanguage" ConceptLink="http://www.isocat.org/datcat/DC-2494">
            <ValueScheme>
                <enumeration>
                    <item>Unspecified</item>
                    <item>Unknown</item>
                    <item>true</item>
                    <item>false</item>
                </enumeration>                
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="TargetLanguage" ConceptLink="http://www.isocat.org/datcat/DC-2499">
            <ValueScheme>
                <enumeration>
                    <item>Unspecified</item>
                    <item>Unknown</item>
                    <item>true</item>
                    <item>false</item>
                </enumeration>                
            </ValueScheme>
        </CMD_Element>
        
        <CMD_Component filename="component-description.xml"></CMD_Component>
        
    </CMD_Component>

</CMD_ComponentSpec>
