<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../general-component-schema.xsd" isProfile="true">
    
    <Header/>
    
    <CMD_Component name="olac" CardinalityMin="1" CardinalityMax="1">
        
        <CMD_Element name="olac-contributor" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" >
            <AttributeList>
                <Attribute>
                    <Name>olac-role</Name>
                    <ValueScheme>
                        <enumeration>
                            <item>annotator</item>
                            <item>author</item>
                            <item>compiler</item>
                            <item>consultant</item>
                            <item>data_inputter</item>
                            <item>depositor</item>
                            <item>developer</item>
                            <item>editor</item>
                            <item>illustrator</item>
                            <item>interpreter</item>
                            <item>interviewer</item>
                            <item>participant</item>
                            <item>performer</item>
                            <item>photographer</item>
                            <item>recorder</item>
                            <item>researcher</item>
                            <item>research_participant</item>
                            <item>responder</item>
                            <item>signer</item>
                            <item>singer</item>
                            <item>speaker</item>
                            <item>sponsor</item>
                            <item>transcriber</item>
                            <item>translator</item>
                        </enumeration>
                    </ValueScheme>
                </Attribute>
            </AttributeList>
        </CMD_Element>
        
             
        <CMD_Element name="olac-coverage" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="olac-creator" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="olac-date" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="olac-description" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="olac-format" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="olac-identifier" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="olac-language" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string">
            <AttributeList>            
                <Attribute>
                    <Name>olac-language</Name>
                    <ValueScheme>
                        <pattern>[A-Za-z][A-Za-z][A-Za-z]?</pattern>
                    </ValueScheme>
                </Attribute>
            </AttributeList>
        </CMD_Element>
        
        <CMD_Element name="olac-publisher" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="olac-relation" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="olac-rights" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="olac-source" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="olac-subject" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" >
            <AttributeList>
                <Attribute>
                    <Name>olac-linguistic-field</Name>
                    <ValueScheme>
                        <enumeration>
                            <item>anthropological_linguistics</item>
                            <item>applied_linguistics</item>
                            <item>cognitive_science</item>
                            <item>computational_linguistics</item>
                            <item>discourse_analysis</item>
                            <item>forensic_linguistics</item>
                            <item>general_linguistics</item>
                            <item>historical_linguistics</item>
                            <item>history_of_linguistics</item>
                            <item>language_acquisition</item>
                            <item>language_documentation</item>
                            <item>lexicography</item>
                            <item>linguistics_and_literature</item>
                            <item>linguistic_theories</item>
                            <item>mathematical_linguistics</item>
                            <item>morphology</item>
                            <item>neurolinguistics</item>
                            <item>philosophy_of_language</item>
                            <item>phonetics</item>
                            <item>phonology</item>
                            <item>pragmatics</item>
                            <item>psycholinguistics</item>
                            <item>semantics</item>
                            <item>sociolinguistics</item>
                            <item>syntax</item>
                            <item>text_and_corpus_linguistics</item>
                            <item>translating_and_interpreting</item>
                            <item>typology</item>
                            <item>writing_systems</item>
                        </enumeration>
                    </ValueScheme>
                </Attribute>
                <Attribute>
                    <Name>olac-language</Name>
                    <ValueScheme>
                        <pattern>[A-Za-z][A-Za-z][A-Za-z]?</pattern>
                    </ValueScheme>
                </Attribute>         
                <Attribute>
                    <Name>olac-discourse-type</Name>
                    <ValueScheme>
                        <enumeration>
                            <item>dialogue</item>
                            <item>drama</item>
                            <item>formulaic</item>
                            <item>ludic</item>
                            <item>oratory</item>
                            <item>narrative</item>
                            <item>procedural</item>
                            <item>report</item>
                            <item>singing</item>
                            <item>unintelligible_speech</item>
                        </enumeration>
                    </ValueScheme>
                </Attribute>                
            </AttributeList>            
        </CMD_Element>
                
        <CMD_Element name="title" ConceptLink="http://purl.org/dc/elements/1.1/title" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string" />
        
        <CMD_Element name="type" ConceptLink="http://purl.org/dc/elements/1.1/type" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string">
            <AttributeList>
                <Attribute>
                    <Name>olac-linguistic-type</Name>
                    <ValueScheme>
                        <enumeration>                            
                            <item>language_description</item>
                            <item>lexicon</item>
                            <item>primary_text</item>
                        </enumeration>
                    </ValueScheme>
                </Attribute>
                <Attribute>
                    <Name>olac-discourse-type</Name>
                    <ValueScheme>
                        <enumeration>
                            <item>dialogue</item>
                            <item>drama</item>
                            <item>formulaic</item>
                            <item>ludic</item>
                            <item>oratory</item>
                            <item>narrative</item>
                            <item>procedural</item>
                            <item>report</item>
                            <item>singing</item>
                            <item>unintelligible_speech</item>
                        </enumeration>
                    </ValueScheme>
                </Attribute>
            </AttributeList>            
        </CMD_Element>
    </CMD_Component>
        

    
</CMD_ComponentSpec>
