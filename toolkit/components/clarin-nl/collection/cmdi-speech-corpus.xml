<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd"> 
    <Header>
        <ID></ID>
        <Name>Speech Corpus</Name>
        <Description>Speech Corpus component</Description>
    </Header>
    <CMD_Component name="SpeechCorpus" CardinalityMax="1">

        <!-- in hours -->
        <CMD_Element name="DurationOfEffectiveSpeech"
            ConceptLink="http://www.isocat.org/datcat/DC-2691" ValueScheme="decimal"/>
        <CMD_Element name="DurationOfFullDatabase"
            ConceptLink="http://www.isocat.org/datcat/DC-2690" ValueScheme="decimal"/>
        <CMD_Element name="NumberOfSpeakers" ValueScheme="decimal"/>


        <CMD_Element name="RecordingEnvironment" ValueScheme="string"
            ConceptLink="http://www.isocat.org/datcat/DC-2696">
            <ValueScheme>
                <enumeration>
                    <item>home/office</item>
                    <item>studio</item>
                    <item>vehicle</item>
                    <item>public place</item>
                    <item>telephone</item>
                </enumeration>
            </ValueScheme>
        </CMD_Element>
        

        <!-- nr of speakers per sex/age class/dialect/socio-economic status etc -->
        <CMD_Element name="SpeakerDemographics" ValueScheme="string"/>

        <CMD_Element name="AnnotationLevelType" ConceptLink="http://www.isocat.org/datcat/DC-2462">
            <ValueScheme>
                <enumeration>
                    <item>orthography</item>
                    <item>non-speech events</item>
                    <item>morphology</item>
                    <item>syntax</item>
                    <item>semantics</item>
                    <item>phonetic</item>
                    <item>prosody</item>
                    <item>segments</item>
                    <item>speaker turn</item>
                    <item>topic</item>
                    <item>sound quality</item>
                    <!-- new in isocat -->
                    <item>gaze direction</item>
                    <!-- check UPF suggestions -->
                </enumeration>
            </ValueScheme>
        </CMD_Element>

        <CMD_Element name="Quality" ValueScheme="string" CardinalityMin="0"/>
        <CMD_Element name="RecordingPlatformHardware" ValueScheme="string"/>
        <CMD_Element name="RecordingPlatformSoftware" ValueScheme="string"/>

        
        <CMD_Component filename="cmdi-speech-technical.xml"/>

        <CMD_Component filename="component-validation.xml"/>

    </CMD_Component>
</CMD_ComponentSpec>
