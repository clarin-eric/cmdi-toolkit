<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd" isProfile="true">

    <Header></Header>
    <!-- belangrijk: maximaal 1 corpus per instantiatie -->
    <CMD_Component name="corpus" CardinalityMax="1">
        
        <CMD_Element name="multilinguality">
            <ValueScheme>
                <enumeration>
                    <item>monolingual</item>
                    <item>bilingual</item>
                    <item>multilingual</item>
                </enumeration>
            </ValueScheme>
        </CMD_Element>
        
        <!-- eg a corpus of travel planning prompts  -->
        <CMD_Element name="Topic" CardinalityMin="0" CardinalityMax="unbounded" ValueScheme="string"/>
        
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-size.xml"/>
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-subjectlanguage.xml"/>
        <CMD_Component filename="component-corpusmodality.xml"/>
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-validation.xml"/>
                
    </CMD_Component>
</CMD_ComponentSpec>
