<?xml version="1.0" encoding="UTF-8"?>

<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="general-component-schema.xsd">
    
    <Header/>
    
    <CMD_Component name="Actor" CardinalityMin="0" CardinalityMax="unbounded">
        
        <CMD_Element name="firstName" ValueScheme="string">
            <!-- provide a nickname attribute for the firstName element -->
            <AttributeList>
                <Attribute>
                    <Name>nickname</Name>
                    <Type>string</Type>
                </Attribute>
            </AttributeList>
        </CMD_Element>
        
        <CMD_Element name="lastName" ValueScheme="string"/>
        
        <CMD_Element name="sex" ConceptLink="http://www.isocat.org/datcat/CMD-000">
            <ValueScheme>
                <enumeration>
                    <item ConceptLink="http://www.isocat.org/datcat/CMD-0010">male</item>
                    <item ConceptLink="http://www.isocat.org/datcat/CMD-001">female</item>
                </enumeration>
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="age" ConceptLink="http://www.isocat.org/datcat/CMD-000">
            <ValueScheme>
                <pattern>([0-9]+)*(;[0-9]+)*(.[0-9]+)</pattern>
            </ValueScheme>
        </CMD_Element>

        <CMD_Component ConceptLink="http://www.isocat.org/datcat/CMD-000" name="ActorLanguage"
            id="ActorLanguage" CardinalityMin="0" CardinalityMax="unbounded">
            <!-- inline element definitions -->
            <CMD_Element name="ActorLanguageName" ValueScheme="string"
                ConceptLink="http://www.isocat.org/datcat/DC-1766"/>
        </CMD_Component>

    </CMD_Component>

</CMD_ComponentSpec>
