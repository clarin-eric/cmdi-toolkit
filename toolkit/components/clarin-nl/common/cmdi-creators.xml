<?xml version="1.0" encoding="UTF-8"?>

<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd" isProfile="false">
    
    <Header>
        <Name>Creators</Name>
        <Description>Component contains (contact) information about the persons and/or organisations involved in the creation process of a resource</Description>
    </Header>

    <CMD_Component name="Creators">

        <!-- within the component Creators the component Description provides the possibility to add extra information about the speaker(s) of a session -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-description.xml" CardinalityMin="0" CardinalityMax="1" />
        <!-- the component Creator contains (contact) information about a person and/or his/her organisation involved in the creation process of the resource -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-creator.xml" CardinalityMin="1" CardinalityMax="unbounded" />
    
    </CMD_Component>

</CMD_ComponentSpec>
