<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd"
    isProfile="false">
    
    <Header>
        <ID>eu.clarin.cmdi.lexicalmaintype</ID>
        <Name>LexicalMainType</Name>
        <Description>A component for describing the main type of a lexical resource. </Description>
    </Header>
    
    <CMD_Component name="LexicalMainType">
        <CMD_Element name="LexicalMainType" ConceptLink="http://www.isocat.org/datcat/DC-2487">
            <ValueScheme>
                <enumeration>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2811">Word list</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2812">Dictionary</item>
                    <item ConceptLink="http://www.isocat.org/rest/dc/142">Semantic network</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2599">Other</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2592">Unspecified</item> 
              </enumeration>
            </ValueScheme>
        </CMD_Element>
    
        <!-- within the component LexicalMainType the component Description provides the possibility to add extra information 
            about the type (other) of the resource -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-description.xml" CardinalityMin="0" CardinalityMax="1" />
    
    </CMD_Component>        
</CMD_ComponentSpec>