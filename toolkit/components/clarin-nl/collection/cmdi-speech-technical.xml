<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd"
                   isProfile="false"> 
    <Header>
        <ID/>
        <Name>Speech Technical Metadata</Name>
        <Description>A component for technical information about an entire speech corpus or about a single recording, e.g. the sampling frequency, the compression,...</Description>
    </Header>
    

        <CMD_Component name="SpeechTechnicalMetadata">

            <CMD_Element name="SamplingFrequency" ValueScheme="decimal" CardinalityMin="0"
                   CardinalityMax="unbounded"/>
            <CMD_Element name="NumberOfChannels" ValueScheme="decimal" CardinalityMin="0"
                   CardinalityMax="unbounded"/>
            <CMD_Element name="ByteOrder" ConceptLink="http://www.isocat.org/datcat/DC-2686"
                   CardinalityMin="0"
                   CardinalityMax="unbounded">
                <ValueScheme>
                    <enumeration>
                        <item ConceptLink="http://www.isocat.org/datcat/DC-2687">big endian</item>
                        <item ConceptLink="http://www.isocat.org/datcat/DC-2688">little endian</item>
                    </enumeration>
                </ValueScheme>
            </CMD_Element>
            <CMD_Element name="Compression" ConceptLink="http://www.isocat.org/datcat/DC-2685"
                   CardinalityMin="0"
                   CardinalityMax="unbounded">
                <ValueScheme>
                    <enumeration>
                        <item>none</item>
                        <item>lossless</item>
                        <item>lossy</item>
                    </enumeration>
                </ValueScheme>
            </CMD_Element>
            <CMD_Element name="BitResolution" ValueScheme="decimal"
                   ConceptLink="http://www.isocat.org/datcat/DC-2684"
                   CardinalityMin="0"
                   CardinalityMax="unbounded"/>
            <!-- within the component SpeechTechnical the component MimeType specifies the mime-type of the corpus, which is a formalized specifier for the format included.-->
            <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin/cmdi-mimetype.xml"
                     CardinalityMin="0"
                     CardinalityMax="unbounded"/>

        </CMD_Component>

        
</CMD_ComponentSpec>