<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd" isProfile="false">
    
    <Header>
        <Name>Size</Name>
        <Description>Component contains information about the total size of a resource and/or about the size per language included in a resource</Description>
    </Header>

    <CMD_Component name="Size">
        
        <!-- the component TotalSize contains information about the size of a resource, e.g. number of words in a speech corpus, number of texts in a text corpus, hours of speech recordings, number of entries in a wordlist,...-->       
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-totalsize.xml"  CardinalityMax="unbounded" />
        <!-- the component SizePerLanguage contains information about the size of the resource, per language included in a bi- or multilingual resource, e.g. number of words, number of texts in a text corpus, hours of speech recordings, number of entries in a wordlist for each langauge included in the resource,...-->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-sizeperlanguage.xml" CardinalityMin="0" CardinalityMax="unbounded"/>

    </CMD_Component>
</CMD_ComponentSpec>