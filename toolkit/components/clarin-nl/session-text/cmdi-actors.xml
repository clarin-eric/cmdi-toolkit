<?xml version="1.0" encoding="UTF-8"?>

<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd" isProfile="false">
    
    <Header>
        <Name>Actors</Name>
        <Description>Component contains information about the speaker(s) of one session </Description>
    </Header>

    <CMD_Component name="Actors">
        
        <!-- within the component Actors the component Description provides the possibility to add extra information about the speaker(s) of a session -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-description.xml" CardinalityMin="0" CardinalityMax="1" />
        <!-- within the component Actors the component Actor contains information about a speaker, e.g. age, profession, ethnic group,... -->        
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/session-text/cmdi-actor.xml" CardinalityMin="1" CardinalityMax="unbounded" />

    </CMD_Component>

</CMD_ComponentSpec>
