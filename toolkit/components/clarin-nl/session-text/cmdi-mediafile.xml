<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" isProfile="false"
                   xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd">
    
    <Header>
        <Name>Media File</Name>
        <Description>Component contains information about the media file of a session, e.g. format, (sound) quality, technical information,... </Description>
    </Header>

    <CMD_Component name="MediaFile">
        <CMD_Element name="CreationYear" ValueScheme="gYear"
                   ConceptLink="http://www.isocat.org/datcat/DC-2510"
                   CardinalityMin="0"
                   CardinalityMax="1"/>
        <CMD_Element name="Type" ConceptLink="http://www.isocat.org/datcat/DC-2570"
                   CardinalityMax="2">
            <ValueScheme>
                <enumeration>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2591">Unknown</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2592">Unspecified</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2653">audio</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2654">video</item>
                </enumeration>                
            </ValueScheme>
        </CMD_Element>            
        <CMD_Element name="Quality" ConceptLink="http://www.isocat.org/datcat/DC-2574"
                   CardinalityMin="0"
                   CardinalityMax="1">
            <ValueScheme>
                <enumeration>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2666">1</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2667">2</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2668">3</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2669">4</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2670">5</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2591">Unknown</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2592">Unspecified</item>
                </enumeration>               
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="RecordingConditions" ValueScheme="string" CardinalityMin="0"
                   CardinalityMax="1"/>
        <CMD_Element name="RecordingPlatformSoftware" ValueScheme="string"
                   ConceptLink="http://www.isocat.org/datcat/DC-2694"
                   CardinalityMin="0"
                   CardinalityMax="1"/>
        <CMD_Element name="RecordingPlatformHardware" ValueScheme="string"
                   ConceptLink="http://www.isocat.org/datcat/DC-2693"
                   CardinalityMin="0"
                   CardinalityMax="1"/>
        <!-- within the component MediaFile the component Location identifies the recording location -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin/cmdi-location.xml"
                     CardinalityMax="1"/>
        <!-- within the component MediaFile the component Size contains information about the size of the mediafile -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-size.xml"
                     CardinalityMin="0"
                     CardinalityMax="1"/>
        <!-- within the component MediaFile the component Description provides the possibility to add extra information about the MediaFile of a session -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-description.xml"
                     CardinalityMin="0"
                     CardinalityMax="1"/>
        <!-- within the component MediaFile the component Speech-Technical contains information about technical aspects of the media file, e.g. the sampling frequency, the byte order,... -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/collection/cmdi-speech-technical.xml"
                     CardinalityMax="1"/>
    </CMD_Component>

</CMD_ComponentSpec>