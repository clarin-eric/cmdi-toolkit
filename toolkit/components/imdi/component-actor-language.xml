<?xml version="1.0" encoding="UTF-8"?>

<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../general-component-schema.xsd" xmlns:xi="http://www.w3.org/2001/XInclude">
    
    <Header/>
    
    <CMD_Component name="Actor_Language" CardinalityMin="0" CardinalityMax="unbounded">

        <CMD_Element name="Name" ValueScheme="string"/>
        <CMD_Element name="ID">
            <ValueScheme>
                <pattern>(ISO639(-1|-2)?:.*)?|(RFC3066:.*)?|(RFC1766:.*)?|(SIL:.*)?|Unknown|Unspecified</pattern>                
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="Mother_Tongue">
            <ValueScheme>
                <enumeration>
                    <item>Unspecified</item>
                    <item>Unknown</item>
                    <item>true</item>
                    <item>false</item>
                </enumeration>                
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="Primary_Language">
            <ValueScheme>
                <enumeration>
                    <item>Unspecified</item>
                    <item>Unknown</item>
                    <item>true</item>
                    <item>false</item>
                </enumeration>                
            </ValueScheme>
        </CMD_Element>
        <xi:include href="component-descriptions.xml" xpointer="element(/1/2)"/>
    </CMD_Component>

</CMD_ComponentSpec>
