<?xml version="1.0" encoding="UTF-8"?>

<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd" isProfile="false">
    
    <Header>
        <ID>eu.clarin.cmdi.annotationtypes</ID>
        <Name>AnnotationTypes</Name>
        <Description>A component for describing all annotations in a resource.</Description>
    </Header>
        
    <CMD_Component name="AnnotationTypes">
        
        <!-- the component AnnotationType contains information about an annotation included in the resource -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-annotationtype.xml" CardinalityMin="1" CardinalityMax="unbounded"></CMD_Component>
        <!-- within the component AnnotationType the component Description provides the possibility to add extra information on the annotation type -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-description.xml" CardinalityMin="0" CardinalityMax="1" />

    </CMD_Component>

</CMD_ComponentSpec>
