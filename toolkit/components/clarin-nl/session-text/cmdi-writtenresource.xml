<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" isProfile="false"
                   xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd">
    
    <Header>
        <Name/>
        <Description>Component contains information about a text itself and the dependent resources (e.g. annotations, analyses,... of the text) or about the written resources associated with a mediafile</Description>
    </Header>
    
    <CMD_Component name="WrittenResource">

        <CMD_Element name="CreationYear" ValueScheme="gYear"
                   ConceptLink="http://www.isocat.org/datcat/DC-2510"
                   CardinalityMin="0"
                   CardinalityMax="1"/>
        <CMD_Element name="Derivation" ConceptLink="http://www.isocat.org/datcat/DC-2518"
                   CardinalityMax="1">
            <ValueScheme>
                <enumeration>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2591">Unknown</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2592">Unspecified</item>
                    <item>Original</item>
                    <item>Analysis</item>
                    <item>Translation</item>
                    <item>Commentary</item>
                    <item>Criticism</item>
                    <item>Annotation</item>
                </enumeration>                
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="DerivationMode" ConceptLink="http://www.isocat.org/datcat/DC-2516"
                   CardinalityMax="1">
            <ValueScheme>
                <enumeration>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2591">Unknown</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2592">Unspecified</item>
                    <item>NAP</item>
                    <item>Automatic/Manual</item>
                    <item ConceptLink="">Manual</item>
                    <item>Automatic</item>
                </enumeration>
            </ValueScheme>
        </CMD_Element>

        <CMD_Element name="AnnotationStyle" ConceptLink="http://www.isocat.org/datcat/DC-2325"
                   CardinalityMax="1">
            <ValueScheme>
                <enumeration>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2327">embedded</item>
                    <item ConceptLink="CONCEPTLINK NIET BEREIKBAAR">stand-off</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2328">mixed</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2591">Unknown</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2592">Unspecified</item>
                    <item>NAP</item>
               </enumeration>
            </ValueScheme>
        </CMD_Element>
        
        <CMD_Element name="CharacterEncoding" ValueScheme="string"
                   ConceptLink="http://www.isocat.org/datcat/DC-2564"
                   CardinalityMin="0"
                   CardinalityMax="1"/>

        <CMD_Element name="Anonymized" ConceptLink="http://www.isocat.org/datcat/DC-2548"
                   CardinalityMax="1">
            <ValueScheme>
                <enumeration>
                    <item>true</item>
                    <item>false</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2591">Unknown</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2592">Unspecified</item>
                </enumeration>                
            </ValueScheme>        
        </CMD_Element>
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-annotationtype.xml"
                     CardinalityMax="unbounded"
                     CardinalityMin="1"/>
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin/cmdi-annotationformat.xml"
                     CardinalityMax="1"/>
        <!-- within the component WrittenResource the component TotalSize contains information about the size of the text and/or annotation files-->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-totalsize.xml"
                     CardinalityMin="0"
                     CardinalityMax="1"/>
        <!-- within the component WrittenResource the component Language identifies the language used in the written resource -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin/cmdi-language.xml"
                     CardinalityMax="1"/>    
        <!-- within the component WrittenResource the component Validation contains information about the validation mode, style and level of the written resource-->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/session-text/cmdi-validation.xml"
                     CardinalityMin="0"
                     CardinalityMax="1"/>
        <!-- within the component WrittenResource the component Description provides the possibility to add extra information about the written resource -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-description.xml"
                     CardinalityMin="0"
                     CardinalityMax="1"/>
    </CMD_Component>

</CMD_ComponentSpec>