<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd" isProfile="false">
    <Header>
        <ID>eu.clarin.cmdi.language</ID>
        <Name>Language</Name>
        <Description>Component for describing a certain language (free name, ISO-639-3 code)</Description>
    </Header>

    <CMD_Component name="Language">
        
        <CMD_Element name="LanguageName" ConceptLink="http://www.isocat.org/datcat/DC-2484" CardinalityMin="1" CardinalityMax="1" ValueScheme="string" />
        <!-- within the component Language the component iso-639-3 identifies a language by means of an isocode -->
        <CMD_Component filename="iso-639-3.xml" CardinalityMin="1" CardinalityMax="1"/>
        
    </CMD_Component>

</CMD_ComponentSpec>
