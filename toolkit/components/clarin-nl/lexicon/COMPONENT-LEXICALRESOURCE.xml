<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd" isProfile="true">
    <Header>
        <ID>eu.clarin.cmdi.lexicon</ID>
        <Name>LexicalResource</Name>
        <Description>A component for describing lexical resources like word lists, dictionaries and semantic networks.</Description>
    </Header>
    
    <CMD_Component name="LexicalResource" CardinalityMin="1" CardinalityMax="1">
        
        <!-- a general purpose component -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-generalinfo.xml" CardinalityMin="1" CardinalityMax="1"></CMD_Component>
        <!-- information on the preceding project in which the lexicon was built -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-project.xml"/>
        <!-- (contact) information on the creators of the lexicon -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-creator.xml" CardinalityMin="1" CardinalityMax="unbounded"/>
        <!--  -->
        <CMD_Component name="OriginLocation">
            <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin/cmdi-location.xml"/>
        </CMD_Component>
        <!-- source material that was used to build the lexicon -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/session-text/cmdi-source.xml"/>
        <!-- information on the size of the lexicon e.g. number of words -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-size.xml"/>
        <!-- information on the lexicon- and annotation format -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin/cmdi-annotationformat.xml"/>
        <!-- information on the languages occurring in the lexicon -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-subjectlanguage.xml"/>
        <!-- language(s) in which the documentation is available -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-documentationlanguages.xml"/>
        <!-- information on (available) validation of the lexicon -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-validation.xml"/>
        <!-- information on the availability and accessibility of the lexicon -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/component-access.xml"/>            
        
        <!-- lexicon-specific components -->
        <!-- the component LexicalResourceType contains information about the type of the lexical resource (e.g. word list, dictionary), the subtype (e.g. terminology) etc.  -->
        <CMD_Component filename="component-lexicalresourcetype.xml"></CMD_Component>
        <!-- the component LexicalResourceContent contains information about the linguistic content of the lexicon-->
        <CMD_Component filename="component-lexicalresourcecontent.xml"></CMD_Component>
                        
    </CMD_Component>
  
</CMD_ComponentSpec>
