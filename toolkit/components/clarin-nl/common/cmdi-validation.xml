<?xml version="1.0" encoding="UTF-8"?>
<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" isProfile="false"
                   xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd">
    <Header>
        <Name>Validation</Name>
        <Description>Component contains information about the validation mode, style and level of a resource</Description>
    </Header>

    <CMD_Component name="Validation">
        <CMD_Element name="Validation" ConceptLink="http://www.isocat.org/datcat/DC-2584"
                   CardinalityMax="1">
            <ValueScheme>
                <enumeration>
                    <item>Validated</item>
                    <item>Not validated</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2591">Unknown</item>
                    <item ConceptLink="http://www.isocat.org/datcat/DC-2592">Unspecified</item>
                </enumeration>
            </ValueScheme>
        </CMD_Element>
        <CMD_Element name="ValidationType" ValueScheme="string"
                   ConceptLink="http://www.isocat.org/datcat/DC-2585"
                   CardinalityMin="0"
                   CardinalityMax="1"/>
        <CMD_Element name="ValidationMode" ValueScheme="string"
                   ConceptLink="http://www.isocat.org/datcat/DC-2586"
                   CardinalityMin="0"
                   CardinalityMax="1"/>
        <CMD_Element name="ValidationLevel" ValueScheme="string"
                   ConceptLink="http://www.isocat.org/datcat/DC-2587"
                   CardinalityMin="0"
                   CardinalityMax="1"/>
    </CMD_Component>
</CMD_ComponentSpec>