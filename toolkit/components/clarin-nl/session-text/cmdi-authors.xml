<?xml version="1.0" encoding="UTF-8"?>

<CMD_ComponentSpec xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.clarin.eu/cmd http://www.clarin.eu/cmd/general-component-schema.xsd" isProfile="false">
    
    <Header>
        <Name>Authors</Name>
        <Description>Component contains informations about the author(s) of a text</Description>
    </Header>
  
    <CMD_Component name="Authors">
        
        <!-- within the component Authors the component Description the possibility to add extra information about the author(s) of a text -->
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/common/cmdi-description.xml" CardinalityMin="0" CardinalityMax="1" />
        <!-- within the component Authors this component contains information about an author of a resource, e.g. name, birth year, does the author use a pseudonym,... -->     
        <CMD_Component filename="http://www.clarin.eu/cmd/components/clarin-nl/session-text/cmdi-author.xml" CardinalityMin="0" CardinalityMax="unbounded" />

    </CMD_Component>

</CMD_ComponentSpec>
